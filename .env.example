# --- Core ---
DEBUG=False
SECRET_KEY=change-me
ALLOWED_HOSTS=example.com,api.example.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://example.com,https://api.example.com

# --- Database (optional, falls back to sqlite) ---
# DATABASE_URL=postgres://user:pass@host:5432/dbname

# --- Security ---
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=2592000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax
SESSION_COOKIE_DOMAIN=.example.com
CSRF_COOKIE_DOMAIN=.example.com

# --- CORS ---
# Use allow all only for trusted internal setups
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com

# --- Email ---
# Email
# Dev default: console; override EMAIL_BACKEND to SMTP only in production
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=no-reply@example.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# --- Stripe (optional) ---
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PORTAL_RETURN_URL=https://example.com/billing/ui/wallet/

# --- Sentry (optional) ---
# SENTRY_DSN=

# --- App specific (Retell) ---
# RETELL_API_KEY=
# RETELL_DEFAULT_AGENT_ID=
# RETELL_CHAT_AGENT_ID=
# RETELL_WEBHOOK_SECRET=
# RETELL_ALLOWED_AGENT_IDS=
