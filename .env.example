# --- Core ---
DEBUG=False
SECRET_KEY=change-me
DJANGO_ALLOWED_HOSTS=example.com,api.example.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://example.com,https://api.example.com

# --- Database (optional, falls back to sqlite) ---
# DATABASE_URL=postgres://user:pass@host:5432/dbname

# --- Security ---
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SECURE_HSTS_SECONDS=2592000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True
DJANGO_SECURE_HSTS_PRELOAD=True

# --- CORS ---
# Use allow all only for trusted internal setups
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com

# --- Email ---
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=no-reply@example.com

# --- Stripe (optional) ---
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PORTAL_RETURN_URL=https://example.com/billing/ui/wallet/

# --- Sentry (optional) ---
# SENTRY_DSN=

